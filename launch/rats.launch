<launch>
    <include file="$(find rosjava_catkin_package_a)/ARLocROS/launch/bebop.launch" />
    <include file="$(find bebop_driver)/launch/bebop_node.launch" />
    <include file="$(find bebop_tools)/launch/joy_teleop.launch" />

	<!-- Main Java Application -->
    <node pkg="rosjava_catkin_package_a" type="BebopRosJava" name="BebopLinePattern" args="applications.parrot.bebop.BebopSimpleLinePattern" output="screen">
        <param name="pose_topic" value="arlocros/pose" />
    </node>
    
    <!-- records flight -->
    <node pkg="rosbag" type="rosbag" name="rosbag_record_all"
       args="rosbag record /bebop/image_raw /bebop/cmd_vel /bebop/odom /tf /bebop/camera_info /arlocros/pose" />

    <node pkg="rostopic" type="rostopic" name="point camera downwards" 
    	args="pub /bebop/camera_control geometry_msgs/Twist '[0.0,0.0,0.0]' '[.00,-50.0,0.0]'" output="screen"/>
</launch>
