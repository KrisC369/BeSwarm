<launch>
    <include file="$(find rosjava_catkin_package_a)/ARLocROS/launch/bebop.launch" />
    <include file="$(find bebop_driver)/launch/bebop_node.launch" />
    <include file="$(find bebop_tools)/launch/joy_teleop.launch" />
    <param name="beswarm/pid_linear_x_kp" value="0.3" />
    <param name="beswarm/pid_linear_x_kd" value="0.1" />
    <param name="beswarm/pid_linear_x_ki" value="0.0" />
    
    <param name="beswarm/pid_linear_y_kp" value="0.3" />
    <param name="beswarm/pid_linear_y_kd" value="0.1" />
    <param name="beswarm/pid_linear_y_ki" value="0.0" />
    
    <param name="beswarm/flight_duration" value="3.0" />
    
    <param name="beswarm/location_x" value="1.5" />
    <param name="beswarm/location_y" value="-2.5" />
    <param name="beswarm/location_z" value="1.0" />
    <param name="beswarm/location_yaw" value="0.0" />
	
    <param name="beswarm/late_delay" value="True" />
    <param name="beswarm/late_delay_milliseconds" value="100" />
	
	
	<!-- Main Java Application
    <node pkg="rosjava_catkin_package_a" type="BebopRosJava" name="BebopLinePattern" args="applications.parrot.bebop.BebopSimpleLinePattern" output="screen">
        <param name="pose_topic" value="arlocros/pose" />
    </node-->
    
    <!-- records flight -->
    <node pkg="rosbag" type="record" name="rosbag_record_all"
       args="/bebop/image_raw /bebop/cmd_vel /bebop/odom /tf /bebop/camera_info /arlocros/pose" />

    <node pkg="rostopic" type="rostopic" name="point camera downwards" 
    	args="pub /bebop/camera_control geometry_msgs/Twist '[0.0,0.0,0.0]' '[.00,-50.0,0.0]'" output="screen"/>
</launch>
